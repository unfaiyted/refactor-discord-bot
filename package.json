{
  "name": "refactor-discord-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "A performant Discord bot for the Refactor server with AI-powered recommendation management",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "docker:dev": "docker-compose up --build",
    "docker:dev:bg": "docker-compose up -d --build",
    "docker:dev:logs": "docker-compose logs -f bot",
    "docker:dev:down": "docker-compose down",
    "docker:dev:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.yml down"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "bun",
    "typescript",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@prisma/client": "^6.1.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^6.1.0"
  }
}
