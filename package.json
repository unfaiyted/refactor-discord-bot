{
  "name": "refactor-discord-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "A performant Discord bot for the Refactor server with AI-powered recommendation management",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "bulk-import": "bun src/scripts/bulk-import.ts",
    "bulk-import:dry-run": "bun src/scripts/bulk-import.ts --dry-run",
    "docker:dev": "docker-compose up --build",
    "docker:dev:bg": "docker-compose up -d --build",
    "docker:dev:logs": "docker-compose logs -f bot",
    "docker:dev:down": "docker-compose down",
    "docker:dev:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.yml down",
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:commits": "commitlint --edit",
    "release": "semantic-release"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "bun",
    "typescript",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@mozilla/readability": "^0.6.0",
    "@prisma/client": "^6.1.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.7",
    "jsdom": "^27.3.0",
    "youtubei.js": "^16.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.0",
    "@types/bun": "latest",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "semantic-release": "^24.2.6"
  }
}
